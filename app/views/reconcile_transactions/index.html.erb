<div class="row">
  <div class="col-md-12">
    <div class="white-box">
      <div class='row'>
        <div class="col-md-10">
          <h3 class="box-title">All Reconciliations</h3>
        </div>
        <div class="col-md-2">
          <%= link_to new_reconcile_transaction_path, class: 'btn btn-primary float-right' do %>
            <i class='fa fa-plus'></i> New Reconciliation
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <div class="white-box">
            <div class="table-responsive">
              <table class="table text-nowrap">
                <thead>
                  <tr>
                    <th class="border-top-0">#</th>
                    <th class="border-top-0">Created At</th>
                    <th class="border-top-0">Summaries</th>
                    <th class="border-top-0">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @reconcile_transactions.each.with_index(1) do |reconcile_transaction, index| %>
                    <tr>
                      <th><%= index %></th>
                      <th><%= reconcile_transaction.created_at.strftime('%F at %I:%M') %></th>
                      <th>
                        <%= link_to reconcile_transaction_summaries_path(reconcile_transaction), class: 'btn btn-primary' do %>
                          <i class='fa fa-list'></i>
                        <% end %>
                      </th>
                      <th>
                        <%= link_to reconcile_transaction_path(reconcile_transaction), class: 'btn btn-warning' do %>
                          <i class='fa fa-eye'></i>
                        <% end %>
                        <%= link_to reconcile_transaction_path(reconcile_transaction), method: :delete, class: 'btn btn-danger' do %>
                          <i class='fa fa-trash'></i>
                        <% end %>
                      </th>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>